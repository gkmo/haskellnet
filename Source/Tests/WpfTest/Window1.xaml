    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Haskell WPF" Height="205" Width="347">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" FlowDirection="RightToLeft">
            <Button Height="23" Width="75" Name="btnSort" Margin="10">Sort</Button>
        </WrapPanel>
        <Grid>
            <Label Height="28" Margin="10,6,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70">Input list:</Label>
            <TextBox Height="23" Margin="10,30,10,0" VerticalAlignment="Top" Name="tbInput" />
            <Label Height="28" Margin="10,68,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120">Ordered output:</Label>
            <TextBox Margin="10,94,10,0" Height="23" VerticalAlignment="Top" Name="tbOutput" />
        </Grid>
    </DockPanel>
</Window>
